package aaaMap;

import java.io.File;
import java.util.Scanner;

public class MapNode {
	
	Node Header;
	Node currentNode;
	
	public void temp(){

		System.out.println( recurs("Start", null) );
	
	}
	
	public Node recurs(String name, Node prev){
		
		try{
			String startPoint="res\\nodes\\+"+name+".node";
			File file = new File(startPoint);
			Scanner in = new Scanner(file);
			
			String mapName="";
			Node nextMaps[] = new Node[3];
			
			Node node = new Node(mapName, prev);
			
			if(in.hasNext()){
				mapName = in.nextLine();
			}
			
			int inc=0;
			while(in.hasNext()){
				String temp=in.nextLine();
				nextMaps[inc++]=recurs(temp, node);
			}
			
			node.setNextMaps(nextMaps);
			
			return(node);
			
		}catch(Exception ex){
			return(null);
		}
		
	}
	
}

class Node{
	
	private Node[] next;
	private Node prev;
	private String map;
	
	public Node(String mapName, Node prevMap){
		map=mapName;
		prev=prevMap;
	}
	
	public Node(String mapName, Node prevMap, Node[] nextMaps){
		map=mapName;
		prev=prevMap;
		next=nextMaps;
	}
	
	public Node[] getNext(){
		return(next);
	}
	
	public Node getPrev(){
		return(prev);
	}
	
	public String getMap(){
		return(map);
	}
	
	public void setNextMaps(Node[] nodes){
		next=nodes;
	}
	
}